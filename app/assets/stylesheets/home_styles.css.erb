.container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  height: 100vh;
}

.background {
  background-image: url(<%= asset_path 'sign-up-background.png' %>);
  background-size: cover;
}

.content__img__update{
  
}

.content__img__update span{
  padding-right: 10px;
}

#user_profile_img{
    width: 200px;
    height: 170px;
    border-radius: 50%;
    margin-bottom: 20px;
}

.content {
  display: grid;
  justify-content: center;
  justify-items: center;
  align-content: center;
  background: #312E38;
}

.content__title {
  color: #fff;
  max-width: 320px;
  margin-bottom: 50px;
}

.content__logo {
  margin-bottom: 75px;
}

.content__radio {
  display: grid;
  grid-template-columns: 1fr 1fr;
  justify-items: center;
  margin-bottom: 25px;
}

.content__radio input {
  opacity: 0;
  position: fixed;
  width: 0;
}

.content__radio label {
  color: #999591;
  padding-bottom: 10px;
  border-bottom: 2px solid transparent;
}

.content__radio input:checked + label,
.content__radio label:hover {
  color: #fff;
  border-bottom: 2px solid #FF9000;
  cursor: pointer;
}

.content__field input {
  width: 340px;
  height: 56px;
  background: #232129;
  color: #666360;
  border-radius: 10px;
  padding: 20px;
  margin: 5px 0;
}

.content__btn input {
  width: 340px;
  height: 56px;
  background: #FF9000;
  border-radius: 10px;
  margin: 10px 0;
  cursor: pointer;
}

.content__link {
  text-decoration: none;
  color: #fff;
  margin-top: 50px;
}

.content__link--password {
  display: block;
  text-align: center;
  margin: 25px 0;
}

.content__link--register {
  display: block;
  text-align: center;
  color: #FF9000;
}

.content__img__update a{
  text-decoration: none;
  color: #fff;
  margin-top: 50px;
  cursor: pointer;
}

.link-true{
  text-decoration: none;
  color: #c7c7 !important;
  margin-top: 50px;
  cursor: pointer;
  font-weight: bold;
}

@media screen and (max-width: 1024px) {
  .container {
    grid-template-columns: auto;
  }

  .background {
    display: none;
  }  
}