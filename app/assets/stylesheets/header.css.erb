.header__container { 
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: 1.5em; 
    font-weight: bold; 
    color: #000; 
    background-color: #28262E;
    height: 104px;
}

.header__left_container{
    display: flex;
    align-items: center;
}

.header__logo {
    display: flex;
    align-items: center;
    margin-left: 4em;
    width: 117.6px;
    height: 65px;
}

.header__user_info {
    display: flex;
    font-family: 'Roboto Slab';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    margin-left: 80px;
}

#header__user_img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.header__user_name {
    margin-left: 1em;
    margin-top: 0.5em;
}

.header__user_welcome {
    color: #999591;
}
.header__user_info__name {
    color: #FF9000;
    font-weight: bold;
    font-size: 16px;
}

.header__logout_icon {
    width: 50px;
    height: 50px;
    margin-right: 4em;
    background-color: #28262E;
    cursor: pointer;
}

.header__page_links_container {
    display: flex;
    align-items: center;
}

.header__page_link {
    display: flex;
    align-items: center;
    font-family: 'Roboto Slab';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    color: #999591;
    text-decoration: none;
    margin-left: 2em;
}

.header__page_link_active {
    display: flex;
    align-items: center;
    font-family: 'Roboto Slab';
    font-style: normal;
    font-weight: 500;
    color: #FF9000;
    font-size: 16px;
    text-decoration: none;
    margin-left: 2em;
}

.header__page_link:first-child {
    margin-left: -40px;
}

.header__page_link_active:first-child {
    margin-left: -40px;
}

.header__page_link:hover {
    color: #FF9000;
}