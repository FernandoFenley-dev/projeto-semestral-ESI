.agendamento {
  display: grid;
  grid-template-columns: 1fr;
  justify-content: center;
  justify-items: center;
  align-content: flex-start;
  height: 100vh;
  margin-top: 50px;
}

.agendamento__title {
  color: #fff;
  font-family: arial, sans-serif;
  margin-bottom: 50px;
}

.agendamento__title span {
  color: #FF9000;
  font-family: arial, sans-serif;
}

.agendamento__field label {
  color: #fff;
  font-size: 1.2rem;
}

.agendamento__field select {
  border-radius: 5px;
  margin: 10px 0;
  padding: 10px;
}