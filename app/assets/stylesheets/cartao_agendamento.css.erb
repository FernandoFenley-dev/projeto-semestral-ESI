.cartao_agendamento__container {
    display: flex;
    justify-content: space-between;
    height: 88px;

    background: #3E3B47;
    border-radius: 10px;

    align-items: center;

    margin-bottom: 48px;
    font-family: 'Roboto Slab';

    cursor: pointer;
}

.cartao_agendamento__container:hover {
    opacity: 0.8;
}

.primeiro {
    height: 112px;
    border-left: 2px solid #FF9000;

}

.a {
    text-decoration: none;
}

.proximos {
    margin-left: 24px;
}

#primeiro__foto {
    width: 80px;
    height: 80px;
    border-radius: 50%;
}

.cartao_agendamento__info_usuario {
    display: flex;
    justify-content: center;
    align-items: center;

    padding-left: 18px;
}

.cartao_agendamento_nome_usuario {
    font-style: normal;
    font-weight: 500;
    font-size: 24px;
    line-height: 32px;

    color: #F4EDE8;

    margin-left: 16px;
}

.cartao_agendamento__horario_container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.cartao_agendamento__horario {
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 26px;

    color: #999591;
    padding-right: 18px;
    padding-left: 8px;
}
