<h1>Cadastro cliente</h1>

<% if @cliente.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @cliente.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with scope: :cliente, url: clientes_path, local: true do |form| %>
  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :senha %><br>
    <%= form.password_field :senha %>
  </p>

  <p>
    <%= form.submit 'Cadastrar' %>
  </p>
<% end %>
