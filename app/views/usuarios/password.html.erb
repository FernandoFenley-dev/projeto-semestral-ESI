<div class="container">
    <div class="background"></div>
    <div class="content">
        <%= image_tag "logo.png", :class=>"content__logo" %>
        <h3 class="content__title">Por favor, insira seu endere√ßo de email. Enviaremos um email para que possa recuperar sua senha.</h3>
        <%= form_with do |f| %>
            <div class="content__field">
                <%= f.email_field :email, placeholder: "E-mail", id:"email", :required => 'required' %>
            </div>
            <div class="content__btn">
                <%= f.submit "Enviar email"%>
            </div>
            <% flash.each do |type, msg| %>
                <div class="content__link">
                    <p><%= msg %> </p>
                </div>
            <% end %>
        <% end %>
         <div class="content__link">
            &larr; 
            <%= link_to 'Voltar para o login', login_path, class:"content__link" %>
        </div>
    </div>

</div>

