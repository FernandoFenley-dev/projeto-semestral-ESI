<h1>Cadastro agendamento</h1>

<% if @agendamento.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @agendamento.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with scope: :agendamento, url: agendamentos_path, local: true do |form| %>

  <p>
    <%= form.label :"Nome Barbeiro"%><br>
    <%= form.select(:idBarbeiro, options_for_select(@barbeirosDDL || Usuario.all.map { |c| [ c.nome, c.id ] }), :prompt => "Selecione o Barbeiro!") %> 
  </p>

  <p>
    <%= form.label :"Data ServiÃ§o"%><br>
    <%= form.datetime_select :dataAgendamento %>
  </p>

  <p>
    <%= form.submit 'Agendar' %>
  </p>
<% end %>


