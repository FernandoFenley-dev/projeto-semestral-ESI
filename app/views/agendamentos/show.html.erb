	<p class="container__agendamento__title">
		<strong>Cliente:</strong>
		<%= @agendamento.cliente.nome %>
	</p>
	<p class="container__agendamento__title">
		<strong>Barbeiro:</strong>
		<%= @barbeiro.nome %>
	</p>
	<p class="container__agendamento__title">
		<strong>Data agendada:</strong>
		<%= @agendamento.data_agendamento.strftime("%d/%m/%Y, Ã s %k:%M") %>
