<%= form_for :session, url: login_path do |f| %>
<div class="field">
<%= f.label :email %><br />
<%= f.email_field :email, autofocus: true %>
</div>

<div class="field">
<%= f.label :password %><br />
<%= f.password_field :password, autocomplete: "off" %>
</div>
<div class="actions">
<%= f.submit "Entrar" %>
</div>
<p><%= link_to "Criar conta", new_usuario_path %></p>
<% end %>